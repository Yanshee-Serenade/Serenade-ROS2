{
	"name": "Serenade-ROS2 Dev",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "../../" 
	},
	"workspaceFolder": "/ros2_ws/src/Serenade-ROS2",
	"remoteUser": "root", 
	"runArgs": [
		"--network=host",
		"--privileged",
		"-v", ".:/ros2_ws/src/Serenade-ROS2"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash",
				"python.defaultInterpreterPath": "/usr/bin/python3"
			},
			"extensions": [
				"github.copilot",
				"github.copilot-chat",
				"ms-vscode.cpptools",
				"ranch-hand-robotics.rde-ros-2",
				"ms-vscode.cmake-tools"
			]
		}
	}
}
